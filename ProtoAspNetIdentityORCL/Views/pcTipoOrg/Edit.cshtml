@model NSPecor.Models.MUB_TIPO_ORGANIZACION
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Editar Tipo de Organización</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_TIPO_ORGANIZACION)

        <div class="form-group">
            @Html.LabelFor(model => model.NOM_TIPO_ORG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOM_TIPO_ORG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOM_TIPO_ORG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ACTIVO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ACTIVO, new SelectList(
                                                                          new List<Object>{
                                                                               new { value = "S" , text = "SI"  },
                                                                               new { value = "N" , text = "NO" }
                                                                            },
                                                                          "value",
                                                                          "text")
                            , htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.ACTIVO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Ver listado", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}