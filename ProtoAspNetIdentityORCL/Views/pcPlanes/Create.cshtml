@model NSPecor.Models.MUB_PECOR_PLAN

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PLAN PECOR</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DESCRIPCION, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DESCRIPCION)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_INICIO, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_INICIO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FECHA_INICIO)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FECHA_FINAL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FECHA_FINAL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FECHA_FINAL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ACTIVO, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* Html.EditorFor(model => model.ACTIVO) *@
                @Html.DropDownListFor(model => model.ACTIVO, new SelectList(
                                                                          new List<Object>{
                                                                               new { value = "S" , text = "Si"  },
                                                                               new { value = "N" , text = "No" }
                                                                            },
                                                                          "value",
                                                                          "text",
                                                                           1)
                            , htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ACTIVO)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/bundles/calendariocss")
    @Scripts.Render("~/bundles/calendariojs")
    @Scripts.Render("~/bundles/Planes")
    
}
