                @Html.EditorFor(model => model.DEMANDA_ANUAL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DEMANDA_ANUAL, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5 text-danger" align="right">
                @ViewBag.MsjValidaDemanda
            </div>
        </div>

        @Html.HiddenFor(model => model.ID_CP_PY)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/vss")
}
