@model NSPecor.Models.MUB_USUARIOS_ROLES

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() 

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
    @*        @Html.HiddenFor(model => model.ID_USUARIO)
        @Html.HiddenFor(model => model.ID_ROL)  *@

        <div class="form-group">
            @Html.LabelFor(model => model.ID_ROL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_ROL", null, "--Selecione Rol--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_ROL, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5 text-danger" align="right">
                @ViewBag.MsjValidaRol
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Roles", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
