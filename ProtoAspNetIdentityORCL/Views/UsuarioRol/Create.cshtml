@model NSPecor.Models.MUB_USUARIOS_ROLES

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ID_ROL, "ROL", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_ROL", null, "--Selecione Rol--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_ROL)
            </div>
            <div class="col-md-5 text-danger" align="right">
                @ViewBag.MsjValidaRol
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Roles", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
